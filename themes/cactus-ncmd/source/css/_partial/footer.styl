#footer
  position: absolute
  bottom: 0
  margin-bottom: 10px
  width: 100%
  color: $color-meta
  vertical-align: top
  text-align: center
  font-size: 0.8rem
  text-transform: uppercase

  ul
    margin: 0
    padding: 0
    list-style: none

  li
    display: inline-block
    margin-right: 15px
    // border-right: 2px solid $color-border
    vertical-align: middle

    a
      margin-right: 15px
      background-color: #383838
      color: #ffffff
      padding: 5px
      border-radius: 3px

  li:last-child
    margin-right: 0
    border-right: 0

    a
      margin-right: 0

  a
    color: $color-meta
    // text-decoration: underline
    background-image: none

  a:hover
    color: $color-link

  .footer-left
    height: 20px
    vertical-align: middle
    line-height: 20px

  .footer-right
      font-size: 1.3rem;

      p
        margin: 0

      a
        padding-right: 5px

@media (min-width: 39rem)
  #footer
    display: flex
    flex-flow: row wrap
    justify-content: space-between
    align-items: center
    align-content: center
    margin-bottom: 20px

    .footer-left
      align-self: flex-start
      margin-right: 20px

    .footer-right
      align-self: flex-end
