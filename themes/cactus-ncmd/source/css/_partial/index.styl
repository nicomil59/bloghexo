.post-list
  padding: 0
  margin-top: 60px

  .post-item
    margin-bottom: 1rem
    margin-left: 0
    list-style-type: none
    display: flex
    flex-direction: column
    align-items: flex-start
    margin-bottom: 60px

    a
      font-size: 1.6rem
      font-weight: bold

    .meta
      display: block
      margin-right: 16px
      min-width: 100px
      color: $color-meta
      font-size: 1.2rem

@media (min-width: 480px)
  .post-list
    .post-item
      display: flex
      margin-bottom: 50px

      .meta
        text-align: left

.project-list
  padding: 0
  list-style: none

  .project-item
    margin-bottom: 5px
    p
      display: inline
