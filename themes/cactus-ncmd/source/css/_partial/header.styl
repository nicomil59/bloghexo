#header
  margin: 0 auto 2rem
  width: 100%
  // height: auto
  display: flex
  justify-content: space-between
  align-items: center
  background-color: #fff
  // border-radius: 4px
  // padding-right: 200px
  // padding-left: 100px
  padding: 20px 0
  position: fixed
  top: 0
  left: 0
  z-index: 3 
  // border-bottom: 1px solid #ddd
  box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)

  #title
    margin-left: 250px

  h1, .h1
    margin-top: 0
    margin-bottom: 0
    // margin-left: 20%
    // color: $color-text
    letter-spacing: .01em
    font-weight: 700
    font-style: normal
    font-size: 2.0rem
    line-height: 2rem
    // ajout perso
    color: #fff
    background-color: $color-accent-1
    padding: 8px
    border-radius: 5px
    display: inline-block

    antialias()

  a
    background: none
    color: inherit
    text-decoration: none

  #logo
    display: inline-block
    float: left
    margin-right: 20px
    width: $logo-width
    height: $logo-height
    border-radius: 5px
    filter: grayscale(100%)
    background-size: $logo-width $logo-height
    background-repeat: no-repeat
    -webkit-filter: grayscale(100%)

  #nav
    color: $color-accent-1
    letter-spacing: .1em
    font-weight: 200
    font-style: normal
    font-size: .8rem
    margin-right: 100px

    ul
      margin: 0
      padding: 0
      list-style-type: none
      line-height: 15px
      font-weight: bold
      font-size: 1.2rem

      a
        margin-right: 50px
        color: $color-accent-2

      a:hover
        underline(5px, $color-accent-1)

      li
        display: inline-block
        // margin-right: 15px
        // border-right: 1px dotted $color-accent-1
        vertical-align: middle

      .icon
        display: none

      li:last-child
        margin-right: 0
        border-right: 0

        a
          margin-right: 0

#header:hover
  #logo
    filter: none
    -webkit-filter: none

@media screen and (max-width: 992px)
  #header #title
    margin-left: 50px

@media screen and (max-width: 768px)
  #header #nav
    margin-right: 20px  

  #header #title
    margin-right: 1rem

  #header #nav ul li a
    margin-right: 6px

@media screen and (max-width: 567px)
  #header #nav ul li
    margin-right: 3px

  #header #nav ul li a
    margin-right: 3px
  
  

@media screen and (max-width: 480px)
  #header #title
    display: table
    margin-right: 2rem
    min-height: $logo-height
    h1
      display: table-cell
      vertical-align: middle

  #header #nav
    ul
      a:hover
        background: none

      li
        // display: none
        border-right: 0

      li.icon
        position: absolute
        top: 27px
        right: 1rem
        // display: inline-block
        display: none

    ul.responsive
      li
        display: block

    li:not(:first-child)
      padding-top: 1rem
      // padding-left: $logo-width + 20px
      font-size: 1rem

@media screen and (max-width: 340px)
  #header #nav
    li:not(:first-child)
      font-size: 0.7rem
    

      
